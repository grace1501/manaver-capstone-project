<p style="color: green"><%= notice %></p>

<div class="row mb-3">
  <%= link_to folder_path(@version.folder_id) do %>
    All versions of <b><%= @version.folder.name %></b>
  <% end %>
</div>

<%= render @version %>

<div class="mb-3 mt-3">
  <%= link_to "Edit this version", edit_version_path(@version), class: "btn btn-sm btn-primary text-white" %>
</div>

<div class="mb-3">
  <%= button_to "Destroy this version", @version, method: :delete, class: "btn btn-sm btn-danger text-white" %>
</div>
