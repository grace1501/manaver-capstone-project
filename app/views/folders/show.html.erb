<p style="color: green"><%= notice %></p>

<div class="row d-flex gap-2">
  <%= link_to "Back to all files", folders_path %>
  <h1><%= @folder.name %></h1>
  <%= link_to "Change name", edit_folder_path(@folder) %>
</div>

<!--Display default version-->
<div id="default-version" class="d-flex justify-content-center">
    <% if @folder.default_version %>
      <%= render "versions/version", version: @folder.default_version %>
    <% else %>
      <p class="fst-italic">No default version assigned.</p>
    <% end %>
</div>

<!--Button to add a new version-->
<div id="add-new-version" class="text-center m-5">
  <%= link_to "Add a new version", new_version_path(folder_id: @folder.id), class: "btn btn-primary btn-lg" %>
</div>

<!--Display of all versions-->
<div class="row text-center">
  <h2 >All versions</h2>
</div>
<div id="versions" class="d-flex justify-content-center gap-3 flex-wrap m-3">
  <% @folder.versions.each do |version| %>
    <div>
    <%= render version %>
    </div>
  <% end %>
</div>

<!--Delete folder button-->
<div class="d-flex justify-content-center m-2">
  <%= button_to "Delete this file and all associated versions", @folder, method: :delete, class: "btn btn-danger" %>
</div>
